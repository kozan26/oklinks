                body: JSON.stringify({ password }),
              });

              const data = await response.json();

              if (!response.ok) {
                showError(data.error === 'invalid_password' ? 'Åifre yanlÄ±ÅŸ. LÃ¼tfen tekrar deneyin.' : 'Kimlik doÄŸrulamasÄ± baÅŸarÄ±sÄ±z oldu');
                if (loginButton) {
                  loginButton.disabled = false;
                  loginButton.textContent = 'GiriÅŸ yap';
                }
                return;
              }

              if (data.token) {

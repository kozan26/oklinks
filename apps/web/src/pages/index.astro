---
import Toast from "../components/Toast";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>oklinks - Short. Smart. Yours.</title>
    <meta name="description" content="Short. Smart. Yours." />
    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
  </head>
  <body class="bg-ink text-default min-h-screen">
    <div class="container mx-auto px-4 py-16 max-w-2xl">
      <div class="text-center mb-12">
        <img src="/oklinks.svg" alt="oklinks" class="inline-block mb-4" />
        <h1 class="text-4xl font-bold mb-2">oklinks</h1>
        <p class="text-muted text-lg">Short. Smart. Yours.</p>
      </div>

      <div id="app" class="bg-graphite rounded-lg p-8 shadow-lg">
        <form id="link-form" class="space-y-6">
          <div>
            <label for="target" class="block text-sm font-medium mb-2">
              Target URL <span class="text-red-400">*</span>
            </label>
            <input
              type="url"
              id="target"
              name="target"
              required
              placeholder="https://example.com"
              class="w-full px-4 py-2 bg-surface text-default border border-olive rounded focus:outline-none focus:ring-2 focus:ring-accent"
            />
          </div>

          <div>
            <label for="alias" class="block text-sm font-medium mb-2">
              Custom Alias (optional)
            </label>
            <input
              type="text"
              id="alias"
              name="alias"
              pattern="[a-z0-9-_]+"
              maxlength="50"
              placeholder="my-link"
              class="w-full px-4 py-2 bg-surface text-default border border-olive rounded focus:outline-none focus:ring-2 focus:ring-accent"
            />
            <p class="text-muted text-xs mt-1">
              Only lowercase letters, numbers, hyphens, and underscores
            </p>
          </div>

          <div>
            <label for="expiresAt" class="block text-sm font-medium mb-2">
              Expiry Date (optional)
            </label>
            <input
              type="datetime-local"
              id="expiresAt"
              name="expiresAt"
              class="w-full px-4 py-2 bg-surface text-default border border-olive rounded focus:outline-none focus:ring-2 focus:ring-accent"
            />
          </div>

          <div class="cf-turnstile" data-sitekey="your-turnstile-site-key-here"></div>

          <button
            type="submit"
            class="w-full bg-accent text-ink font-semibold py-3 px-6 rounded hover:bg-opacity-90 focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-ink transition"
          >
            Create Link
          </button>
        </form>

        <div id="success" class="hidden mt-8 p-6 bg-olive bg-opacity-20 rounded border border-olive">
          <h2 class="text-xl font-semibold mb-4">Link Created!</h2>
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium mb-1">Short Link</label>
              <div class="flex gap-2">
                <input
                  type="text"
                  id="short-link"
                  readonly
                  class="flex-1 px-4 py-2 bg-surface text-default border border-olive rounded"
                />
                <button
                  id="copy-btn"
                  class="px-4 py-2 bg-accent text-ink font-semibold rounded hover:bg-opacity-90 focus:outline-none focus:ring-2 focus:ring-accent"
                >
                  Copy
                </button>
              </div>
            </div>
            <div>
              <a
                id="qr-link"
                href="#"
                target="_blank"
                class="inline-block px-4 py-2 bg-surface text-accent border border-accent rounded hover:bg-accent hover:text-ink transition"
              >
                View QR Code
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <Toast client:load />

    <script>
      const form = document.getElementById("link-form") as HTMLFormElement;
      const successDiv = document.getElementById("success") as HTMLDivElement;
      const shortLinkInput = document.getElementById("short-link") as HTMLInputElement;
      const copyBtn = document.getElementById("copy-btn") as HTMLButtonElement;
      const qrLink = document.getElementById("qr-link") as HTMLAnchorElement;
      const toast = document.querySelector("toast-component") as any;

      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(form);
        const target = formData.get("target") as string;
        const alias = formData.get("alias") as string;
        const expiresAt = formData.get("expiresAt") as string;

        // Get Turnstile token (only if widget exists)
        let turnstileToken: string | undefined;
        const turnstileWidget = document.getElementById("turnstile-widget");
        if (turnstileWidget && (window as any).turnstile) {
          const token = (window as any).turnstile.getResponse();
          if (!token) {
            alert("Please complete the verification challenge");
            return;
          }
          turnstileToken = token;
        }

        try {
          const body: any = {
            target,
          };

          if (turnstileToken) {
            body.turnstileToken = turnstileToken;
          }

          if (alias) {
            body.alias = alias;
          }

          if (expiresAt) {
            body.expiresAt = new Date(expiresAt).getTime();
          }

          const response = await fetch("/api/links", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(body),
          });

          if (!response.ok) {
            const error = await response.json();
            alert(error.error || "Failed to create link");
            return;
          }

          const data = await response.json();
          const shortUrl = `${window.location.origin}/${data.alias}`;
          shortLinkInput.value = shortUrl;
          qrLink.href = `/qr/${data.alias}`;
          successDiv.classList.remove("hidden");
          form.reset();
          if ((window as any).turnstile) {
            (window as any).turnstile.reset();
          }

          // Scroll to success
          successDiv.scrollIntoView({ behavior: "smooth", block: "nearest" });
        } catch (error) {
          console.error("Error:", error);
          alert("Failed to create link");
        }
      });

      copyBtn.addEventListener("click", () => {
        shortLinkInput.select();
        document.execCommand("copy");
        if (toast) {
          toast.show("Copied!");
        }
      });
    </script>
  </body>
</html>

<style>
  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial,
      sans-serif;
  }
</style>


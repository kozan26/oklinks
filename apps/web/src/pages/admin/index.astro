---
import { inlineCSS } from "../../styles/inline.css.ts";
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>oklinks â€” Admin</title>
    <link rel="icon" type="image/svg+xml" href="/oklinks.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;700&family=JetBrains+Mono:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <style set:html={inlineCSS} is:global></style>
    <style is:global>
      :root {
        --admin-background: hsl(222.2 84% 4.9%);
        --admin-card: hsl(222.2 47.4% 11.2%);
        --admin-card-border: hsl(217.2 32.6% 17.5%);
        --admin-primary: hsl(210 40% 98%);
        --admin-secondary: hsl(217.2 32.6% 17.5%);
        --admin-accent: hsl(217.2 32.6% 17.5%);
        --admin-destructive: hsl(0 84.2% 60.2%);
        --admin-muted: hsl(217.2 32.6% 17.5%);
        --admin-border: hsl(217.2 32.6% 17.5%);
        --admin-input: hsl(217.2 32.6% 17.5%);
        --admin-ring: hsl(212.7 26.8% 83.9%);
      }

      .admin-page {
        min-height: 100vh;
        background: var(--admin-background);
        color: var(--admin-primary);
      }

      /* Login Screen */
      .login-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
      }

      .login-card {
        width: 100%;
        max-width: 400px;
        background: var(--admin-card);
        border: 1px solid var(--admin-card-border);
        border-radius: 0.5rem;
        padding: 2rem;
        box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
      }

      .login-header {
        margin-bottom: 1.5rem;
      }

      .login-title {
        font-size: 1.875rem;
        font-weight: 700;
        color: var(--admin-primary);
        margin-bottom: 0.5rem;
      }

      .login-description {
        color: hsl(215 20.2% 65.1%);
        font-size: 0.875rem;
      }

      .login-form-group {
        margin-bottom: 1.5rem;
      }

      .login-label {
        display: block;
        font-size: 0.875rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
        color: var(--admin-primary);
      }

      .login-input {
        width: 100%;
        padding: 0.5rem 0.75rem;
        background: var(--admin-background);
        border: 1px solid var(--admin-border);
        border-radius: 0.375rem;
        color: var(--admin-primary);
        font-size: 0.875rem;
        transition: all 0.2s;
      }

      .login-input:focus {
        outline: none;
        border-color: var(--admin-ring);
        box-shadow: 0 0 0 2px hsl(212.7 26.8% 83.9% / 0.2);
      }

      .login-button {
        width: 100%;
        padding: 0.625rem 1rem;
        background: var(--admin-primary);
        color: var(--admin-background);
        border: none;
        border-radius: 0.375rem;
        font-size: 0.875rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s;
      }

      .login-button:hover:not(:disabled) {
        background: hsl(210 40% 96%);
      }

      .login-button:disabled {
        opacity: 0.5;
        cursor: not-allowed;
      }

      .login-error {
        margin-top: 1rem;
        padding: 0.75rem;
        background: hsl(0 84.2% 60.2% / 0.1);
        border: 1px solid hsl(0 84.2% 60.2% / 0.2);
        border-radius: 0.375rem;
        color: var(--admin-destructive);
        font-size: 0.875rem;
      }

      /* Admin Content */
      .admin-wrapper {
        min-height: 100vh;
        padding: 2rem;
      }

      .admin-container {
        max-width: 1200px;
        margin: 0 auto;
      }

      .admin-header {
        margin-bottom: 2rem;
      }

      .admin-header-top {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 0.5rem;
      }

      .admin-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--admin-primary);
      }

      .admin-description {
        color: hsl(215 20.2% 65.1%);
        font-size: 0.875rem;
      }

      .admin-card {
        background: var(--admin-card);
        border: 1px solid var(--admin-card-border);
        border-radius: 0.5rem;
        padding: 1.5rem;
        box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
      }

      .admin-card-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 1.5rem;
      }

      .admin-card-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--admin-primary);
      }

      .button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        font-size: 0.875rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s;
        border: none;
        font-family: inherit;
      }

      .button-secondary {
        background: var(--admin-secondary);
        color: var(--admin-primary);
        border: 1px solid var(--admin-border);
      }

      .button-secondary:hover {
        background: hsl(217.2 32.6% 20%);
      }

      .button-destructive {
        background: hsl(0 84.2% 60.2% / 0.1);
        color: var(--admin-destructive);
        border: 1px solid hsl(0 84.2% 60.2% / 0.2);
      }

      .button-destructive:hover {
        background: hsl(0 84.2% 60.2% / 0.2);
      }

      .button:disabled {
        opacity: 0.5;
        cursor: not-allowed;
      }

      .admin-table-wrapper {
        overflow-x: auto;
        border-radius: 0.375rem;
      }

      .admin-table {
        width: 100%;
        border-collapse: collapse;
      }

      .admin-table thead {
        background: var(--admin-muted);
      }

      .admin-table th {
        padding: 0.75rem 1rem;
        text-align: left;
        font-size: 0.75rem;
        font-weight: 500;
        color: hsl(215 20.2% 65.1%);
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      .admin-table th:last-child {
        text-align: right;
      }

      .admin-table td {
        padding: 0.75rem 1rem;
        border-top: 1px solid var(--admin-border);
        color: var(--admin-primary);
        font-size: 0.875rem;
      }

      .admin-table td:last-child {
        text-align: right;
      }

      .admin-table tbody tr:hover {
        background: hsl(217.2 32.6% 10%);
      }

      .badge {
        display: inline-flex;
        align-items: center;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 500;
        background: var(--admin-secondary);
        color: var(--admin-primary);
      }

      .badge-mono {
        font-family: var(--font-mono);
        background: hsl(212.7 26.8% 16%);
        color: hsl(210 40% 98%);
      }

      .admin-status {
        margin-bottom: 1rem;
        padding: 0.75rem;
        border-radius: 0.375rem;
        background: var(--admin-muted);
        color: hsl(215 20.2% 65.1%);
        font-size: 0.875rem;
        text-align: center;
      }

      .empty-state {
        text-align: center;
        padding: 3rem 1rem;
        color: hsl(215 20.2% 65.1%);
      }

      .error-state {
        text-align: center;
        padding: 3rem 1rem;
        color: var(--admin-destructive);
      }

      .link-target {
        max-width: 300px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      }

      @media (max-width: 768px) {
        .admin-wrapper {
          padding: 1rem;
        }

        .admin-card {
          padding: 1rem;
        }

        .admin-table {
          font-size: 0.75rem;
        }

        .admin-table th,
        .admin-table td {
          padding: 0.5rem;
        }
      }
    </style>
  </head>
  <body class="admin-page">
    <div id="login-screen" style="display: none;">
      <div class="login-wrapper">
        <div class="login-card">
          <div class="login-header">
            <h1 class="login-title">Welcome back</h1>
            <p class="login-description">Enter your password to access the admin panel</p>
          </div>
          <form id="login-form">
            <div class="login-form-group">
              <label for="admin-password" class="login-label">Password</label>
              <input
                id="admin-password"
                type="password"
                class="login-input"
                placeholder="Enter admin password"
                required
                autocomplete="current-password"
              />
            </div>
            <button type="submit" class="login-button" id="login-button">
              Sign in
            </button>
            <div id="login-error" class="login-error" style="display: none;"></div>
          </form>
        </div>
      </div>
    </div>

    <div id="admin-content" class="admin-wrapper" style="display: none;">
      <div class="admin-container">
        <header class="admin-header">
          <div class="admin-header-top">
            <div>
              <h1 class="admin-title">Links</h1>
              <p class="admin-description">Manage and monitor your short links</p>
            </div>
          </div>
        </header>

        <div class="admin-card">
          <div class="admin-card-header">
            <h2 class="admin-card-title">Recent links</h2>
            <button id="refresh" type="button" class="button button-secondary">
              <span class="material-icons" style="font-size: 1rem;">refresh</span>
              Refresh
            </button>
          </div>

          <div id="admin-status" class="admin-status" style="display: none;"></div>

          <div class="admin-table-wrapper">
            <table class="admin-table">
              <thead>
                <tr>
                  <th>Alias</th>
                  <th>Target</th>
                  <th>Clicks</th>
                  <th>Expires</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="links-body"></tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <script is:inline>
      console.log('Admin script loading...');
      (function() {
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', init);
        } else {
          init();
        }
        
        function init() {
          const loginScreen = document.getElementById('login-screen');
          const adminContent = document.getElementById('admin-content');
          const loginForm = document.getElementById('login-form');
          const loginError = document.getElementById('login-error');
          const loginButton = document.getElementById('login-button');
          const passwordInput = document.getElementById('admin-password');
          const status = document.getElementById('admin-status');
          const body = document.getElementById('links-body');
          const refresh = document.getElementById('refresh');

          // Check if already authenticated
          const token = sessionStorage.getItem('admin_token');
          if (token) {
            verifyToken(token);
          } else {
            showLogin();
          }

          if (loginForm) {
            loginForm.addEventListener('submit', handleLogin);
          }

          async function handleLogin(e) {
            e.preventDefault();
            if (!passwordInput) return;

            const password = passwordInput.value;
            if (!password) return;

            if (loginButton) {
              loginButton.disabled = true;
              loginButton.textContent = 'Signing in...';
            }

            try {
              const response = await fetch('/api/admin-auth', {
                method: 'POST',
                headers: { 'content-type': 'application/json' },
                body: JSON.stringify({ password }),
              });

              const data = await response.json();

              if (!response.ok) {
                showError(data.error === 'invalid_password' ? 'Invalid password. Please try again.' : 'Authentication failed');
                if (loginButton) {
                  loginButton.disabled = false;
                  loginButton.textContent = 'Sign in';
                }
                return;
              }

              if (data.token) {
                sessionStorage.setItem('admin_token', data.token);
                showAdmin();
                loadLinks();
              }
            } catch (error) {
              console.error('Login error:', error);
              showError('Failed to authenticate. Please try again.');
              if (loginButton) {
                loginButton.disabled = false;
                loginButton.textContent = 'Sign in';
              }
            }
          }

          async function verifyToken(token) {
            try {
              const response = await fetch('/api/admin-auth', {
                headers: { 'Authorization': `Bearer ${token}` },
              });

              const data = await response.json();
              if (data.authenticated) {
                showAdmin();
                loadLinks();
              } else {
                sessionStorage.removeItem('admin_token');
                showLogin();
              }
            } catch (error) {
              console.error('Token verification error:', error);
              sessionStorage.removeItem('admin_token');
              showLogin();
            }
          }

          function showLogin() {
            if (loginScreen) loginScreen.style.display = '';
            if (adminContent) adminContent.style.display = 'none';
            if (passwordInput) passwordInput.value = '';
            if (loginError) loginError.style.display = 'none';
          }

          function showAdmin() {
            if (loginScreen) loginScreen.style.display = 'none';
            if (adminContent) adminContent.style.display = '';
            if (loginError) loginError.style.display = 'none';
          }

          function showError(message) {
            if (loginError) {
              loginError.textContent = message;
              loginError.style.display = '';
            }
          }

          function setStatus(message, isError = false) {
            if (status) {
              status.textContent = message;
              status.style.display = message ? 'block' : 'none';
              status.className = isError ? 'admin-status error-state' : 'admin-status';
            }
          }

          async function loadLinks() {
            const token = sessionStorage.getItem('admin_token');
            if (!token) {
              showLogin();
              return;
            }

            setStatus('Loading links...');
            if (body) body.innerHTML = '';
            try {
              const response = await fetch('/api/links', {
                headers: {
                  accept: 'application/json',
                },
              });
              
              if (!response.ok) {
                if (response.status === 401) {
                  sessionStorage.removeItem('admin_token');
                  showLogin();
                  return;
                }
                const errorText = await response.text();
                console.error('API error:', response.status, errorText);
                throw new Error('Request failed: ' + response.status);
              }
              
              const payload = await response.json();
              console.log('API response:', payload);
              const items = Array.isArray(payload?.links) ? payload.links : [];
              console.log('Links found:', items.length);
              
              if (items.length === 0) {
                setStatus('No links found.');
                if (body) {
                  body.innerHTML = '<tr><td colspan="5" class="empty-state">No links created yet.</td></tr>';
                }
                return;
              }
              
              for (const link of items) {
                const row = document.createElement('tr');
                row.innerHTML = `
                  <td><span class="badge badge-mono">${escapeHtml(link.alias || '')}</span></td>
                  <td class="link-target" title="${escapeHtml(link.target || '')}">${escapeHtml(link.target || '')}</td>
                  <td style="text-align: right;">${link.clicks_total ?? 0}</td>
                  <td style="text-align: right;">${formatExpiry(link.expires_at)}</td>
                  <td style="text-align: right;">
                    <button data-id="${escapeHtml(link.id || '')}" class="button button-destructive delete-btn">
                      <span class="material-icons" style="font-size: 1rem;">delete</span>
                      Delete
                    </button>
                  </td>`;
                if (body) body.appendChild(row);
              }
              
              setStatus(`Loaded ${items.length} link${items.length !== 1 ? 's' : ''}.`);
            } catch (error) {
              console.error('Load error:', error);
              setStatus('Failed to load links: ' + (error.message || 'Unknown error'), true);
              if (body) {
                body.innerHTML = '<tr><td colspan="5" class="error-state">Error loading links. Check console for details.</td></tr>';
              }
            }
          }

          function escapeHtml(text) {
            if (text == null) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
          }

          function formatExpiry(expires) {
            if (!expires) {
              return '<span style="color: hsl(215 20.2% 65.1%);">Never</span>';
            }
            const value = Number(expires);
            if (!Number.isFinite(value) || value <= 0) {
              return '<span style="color: hsl(215 20.2% 65.1%);">Never</span>';
            }
            const date = new Date(value * 1000);
            const now = Date.now();
            if (date.getTime() < now) {
              return '<span style="color: var(--admin-destructive);">Expired</span>';
            }
            return date.toLocaleString();
          }

          async function handleDelete(event) {
            const token = sessionStorage.getItem('admin_token');
            if (!token) {
              showLogin();
              return;
            }

            const target = event.target.closest('.delete-btn');
            if (!target) return;
            
            const id = target.getAttribute('data-id');
            if (!id) {
              console.error('Delete failed: no ID found');
              setStatus('Error: Link ID not found', true);
              return;
            }
            
            if (!confirm('Are you sure you want to delete this link? This action cannot be undone.')) {
              return;
            }

            target.disabled = true;
            const originalHTML = target.innerHTML;
            target.innerHTML = '<span class="material-icons" style="font-size: 1rem;">hourglass_empty</span> Deleting...';
            
            try {
              console.log('Deleting link:', id);
              const url = '/api/links/' + encodeURIComponent(id);
              console.log('Delete URL:', url);
              
              const response = await fetch(url, {
                method: 'DELETE',
                headers: {
                  'accept': 'application/json',
                },
              });
              
              console.log('Delete response status:', response.status);
              console.log('Delete response headers:', Object.fromEntries(response.headers.entries()));
              
              const contentType = response.headers.get('content-type') || '';
              console.log('Content-Type:', contentType);
              
              let result;
              const responseText = await response.text();
              console.log('Response text:', responseText.substring(0, 500));
              
              try {
                if (contentType.includes('application/json') || responseText.trim().startsWith('{')) {
                  result = JSON.parse(responseText);
                } else {
                  console.error('Non-JSON response received:', responseText);
                  result = { error: 'invalid_response', message: responseText.substring(0, 100) };
                }
              } catch (parseError) {
                console.error('Failed to parse response:', parseError, 'Text:', responseText.substring(0, 200));
                result = { error: 'parse_error', message: 'Failed to parse server response: ' + responseText.substring(0, 100) };
              }
              
              console.log('Parsed result:', result);
              
              if (!response.ok) {
                if (response.status === 401) {
                  sessionStorage.removeItem('admin_token');
                  showLogin();
                  return;
                }
                throw new Error(result.error || result.message || `Delete failed (${response.status})`);
              }
              
              if (result.deleted === true) {
                setStatus('Link deleted successfully.');
                setTimeout(() => setStatus(''), 3000);
                await loadLinks();
              } else {
                throw new Error(result.error || result.message || 'Delete was not successful');
              }
            } catch (error) {
              console.error('Delete error:', error);
              setStatus('Failed to delete link: ' + (error.message || 'Unknown error'), true);
              target.innerHTML = originalHTML;
              target.disabled = false;
            }
          }

          if (refresh) {
            refresh.addEventListener('click', loadLinks);
          }

          if (body) {
            body.addEventListener('click', handleDelete);
          }
        }
      })();
      console.log('Admin script setup complete');
    </script>
  </body>
</html>
